// переменные
color-text = rgb(128, 128, 128)
bg-color = #f1f1f1
shadow = 4px 5px 10px rgba(0, 0, 0, 0.4)

// миксин для background'a разделов все страницы 
back(size)
    border-radius 10px
    background-color bg-color
    box-shadow shadow
    padding: size + "%"
    margin 0 0 1% 0

// ставлю цвет текста, шрифт, фоновый рисунок все страницы
html
    color color-text
    font-family: 'Comic Sans MS', cursive, sans-serif;
    background-image url("C:\Users\Lenovo\Desktop\Six_laba\my_pug\src\images\back.jpg")


// шапка где поиск все страницы
.header
    text-align right
    background-color color-text
    border-radius 10px
    box-shadow shadow
    padding 0.5%        
    margin 0 0 0.5% 0

    // поиск
    &__input
        width 30%

// название и три колонки все страницы
.nav
    back(0)
    text-align center

    // для ссылок
    &__link
        display inline-block
        padding 1%
        color color-text
        text-decoration: none
        
        // для активной ссылки и активости на ссылках
        &:hover,&.nav__link_active
            background-color rgb(196, 190, 255)
            color #f8f8f8

    // для названия сайта
    &__span
        display block
        float left
        padding 0.7%
        color color-text

        // для активности на названии сайта
        &:hover,&.nav__span_active
            color rgb(196, 190, 255)

// основной контент все страницы
.content

    // блок с картинками основная страница
    &__images
        display grid
        grid-template-rows auto auto
        grid-template-columns repeat(2, 1fr)
        gap 10px
        width 100%
        max-width 1300px
        margin auto

        & img 
            width 100% 
        // для основной картинки
        &_large-image
            grid-column 1 / span 2
            text-align center
        // для двух второстепенных картинок
        &_small-image
            text-align center

    //три блока с информацией основная страница
    &__article
        width 100%
        max-width 1300px
        margin 1% auto
        display grid
        grid-template-columns repeat(3, 1fr)
        grid-gap 4%

        // секция
        &_section
            display grid
            grid-template-columns 1fr
            grid-gap 2%
            text-align justify
            back(2)

            // для заголовка
            &-title
                grid-column 1/3
                margin 0
                text-align center
            
            // для картинки
            &-image
                display block
                width: 60%
                margin 0 auto
    
    // картинка сбербанка вкладка сбербанка
    &__sber-image
        display block
        width 40%
        border-radius 20px
        margin 0 auto

    // блоки с абзацами вкладка сбербанка
    &__section
        display grid
        grid-template-columns repeat(2,1fr)
        margin 1%

        // для абзацев
        &__div
            margin 2%

    //стиль для таблицы вкладка таблицы
    &__table
        border-collapse collapse
        width 80%
        margin 0 auto
        overflow-x auto

        // для ячеек и названий столбцов
        &__cell, &__header
            border solid thin grey
            text-align left
            padding 8px
            font-size 14px

    //стили для фильтров вкладка таблицы
    &__details

        // для поля
        &__fieldset
            border 1px solid grey
            margin-bottom 20px
            padding 10px

        // для названия
        &__label
            display block
            margin 5px 0

        // для селектора    
        &__select
            width calc(100%-20px)
            padding 5px
            margin 5px 0
            box-sizing border-box
        
        // для checkbox'a
        &__input-checkbox
            margin-right 5px

        // для кнопки
        &__button
            padding 5px 10px

// footer:0 все страницы
.footer
    background-color color-text
    border-radius 10px
    box-shadow shadow

    // для блока с именем и годом
    &__title 
        padding 10px
        color #f8f8f8
        
// медиа-запросы
@media (max-width:900px)
    // название и три колонки все страницы
    .nav
        //чтобы ссылки переходили в список по вертикали
        &__link
            display block
        // чтобы название сайта было по середине
        &__span
            float none
    // основной контент все страницы
    .content
        // чтобы в таблице изменялся размер шрифта и внутренние отступы
        &__table
            &__cell, &__header
                font-size 12px
                padding 6px

@media (max-width:600px)
    // основной контент все страницы
    .content
        // чтобы блок с информацией на главное странице переходил в список по вертикали
        &__article
            display block
            // чтобы уменьшить размеры картинок в секциях
            &_section
                &-image
                    width 30% !important
        // чтобы блоки с информацией на странице сбербанка переходили в список по вертикали
        &__section
            display block

@media (max-width: 670px)
    // основной контент все страницы
    .content
        // чтобы сделать для таблицы полосу прокрутки по горизонтали
        &__table
            display block
            overflow-x auto
    